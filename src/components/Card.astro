---
export interface Props {
	title: string;
	date: string;
	read: string;
	img: string;
}

const {title, date, read, img } = Astro.props;
---

<div class="card">
	<div>
		<h1 class="title">{title}</h1>
	</div>

	<div>
		<p class="date">{date} - {read}</p>
	</div>

	<img src={img}>
	<div class="btns">
		<i class="fa-solid fa-arrow-up"></i>
		<i class="fa-regular fa-comment"></i>
		<i class="fa-solid fa-share"></i>
	</div>
</div>

<style>
    .card {
        background: #fff;
        color: #202020;
        border-radius: 5px;
        box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 25px 50px 0 rgba(0, 0, 0, 0.1);
        padding: 10px;
		margin: 0.8rem;
		width: 400px;
        margin-bottom: 5px;
    }

	.title {
		height: 35px;
		margin-bottom: 5px;
	}

	img {
		max-width: 100%;
		height: 200px;
	}

	.btns {
		margin-top: 3px;
		display: flex;
		justify-content: space-between;
	}

	p {
		font-size: 20px;
		margin-bottom: 5px;
	}

	i {
		font-size: 18px;
	}
</style>